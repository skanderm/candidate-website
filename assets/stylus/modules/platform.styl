@require fonts
desktop-h2-font-size = 34px

paragraph-font-size = 20px
subtext-font-size = 18px

camp-primary = #3c2d82
camp-secondary = #f9d83d

@media (max-width 960px)
  paragraph-font-size = 18px
  subtext-font-size = 16px

// Hero Container //
#platform-hero-wrapper
  width 100%
  max-width 100%
  background-color camp-secondary

#platform-hero-container
  hero-color = camp-primary

  flexbox(flex)
  flex-direction(row)
  justify-content(center)
  align-items(center)
  padding 0 10%
  max-width 1440px
  margin 0 auto
  // Stuff

  @media (max-width 960px)
    // Stuff

  @media (min-width 961px)
    // Hiiii

  #hero-text-container
    flexbox(flex)
    flex-direction(column)
    justify-content(center)
    margin 5em 0
    width 100%
    // Stuff
    @media (max-width 960px)
      padding 0

    @media (min-width 961px)
      padding 0 10%

    #hero-header-container
      flexbox(flex)
      align-items(center)
      justify-content(center)

      #hero-header-text
        font-size 64px
        color hero-color
        font-family primary_font_name
        text-align center
        font-size 64px

        @media (max-width 320px)
          font-size 42px

        @media (max-width 320px)
          // Stuff

        @media (min-width 961px)
          // Stuff


    #hero-divider-container
      flexbox(flex)
      flex-direction(row)
      justify-content(center)
      align-items(center)

      #hero-divider-left-container
        flexbox(flex)
        align-items(center)
        justify-content(center)
        width 100%

        #hero-divider-left
          color hero-color
          border-top 1px solid hero-color
          margin-left 0
          margin-right 0
          width 100%

      #hero-divider-star-container
        flexbox(flex)
        align-items(center)
        justify-content(center)
        margin 0em 12px

        #hero-divider-star
          color hero-color
          font-size 30px


      #hero-divider-right-container
        flexbox(flex)
        align-items(center)
        justify-content(center)
        width 100%

        #hero-divider-right
          color hero-color
          border-top 1px solid hero-color
          margin-left 0
          margin-right 0
          width 100%

    #hero-subheader-container
      flexbox(flex)
      align-items(center)
      justify-content(center)

      #hero-subheader-text
        font-size 20px
        color hero-color
        font-family secondary_font_name
        text-align center
        letter-spacing 1.35px

#platform-table-of-contents-wrapper
  width 100%
  max-width 100%
  background-color #EBEAF1

  @media (max-width 960px)
    display none

  @media (min-width 961px)
    // Hiiii

#platform-table-of-contents-container
  flexbox(flex)
  justify-content(center)
  flex-wrap(wrap)
  padding 3em 10%
  max-width 1440px
  margin 0 auto

  #table-of-contents
    flexbox(flex)
    justify-content(flex-left)
    flex-wrap(wrap)

    .chapter
      flexbox(flex)
      flex-direction(column)
      justify-content(space-between)
      align-self(center)
      margin 4px 0
      width 33.3%
      font-size 18px
      font-family primary_font_name // Fixed
      text-align center
      font-weight bold

      a
        color #3C2D82

    .left-chapter
      flexbox(flex)
      flex-direction(column)
      justify-content(space-between)
      margin 4px 0
      width 33.3%
      font-size 18px
      font-family primary_font_name // Fixed
      text-align left
      font-weight bold
      padding-right 8px

      a
        color #3C2D82

.key-issues
  padding 20px 0
  .header
    padding 0 10%
    margin-bottom 20px
    flexbox(flex)
    justify-content(space-between)
    .title
      margin 0
      font-size 4em
      color #111
    .directions
      align-self(flex-end)
      text-decoration underline
      text-transform uppercase
      color #4A5061

camp-border = 1px solid camp-primary
transition-rate = 0.2s
.platform-issues-container
  flexbox(flex)
  flex-direction(column)
  @media (min-width 960px)
    padding 0 10%
    max-width 1440px
    margin-left auto
    margin-right auto

  .social-share
    &:hover
      text-decoration none

  .twitter-icon
  .facebook-icon
    flexbox(flex)
    align-items(center)
    margin -20px -10px -20px 0
    svg
      height 40px
    circle
      display none
    path
      fill #111111
    &:hover path
      fill camp-primary

  .issue-divider-container
    .issue-divider
      @media (max-width 960px)
        margin 0 0 !important

  .issue-container
    flexbox(flex)
    flex-direction(column)
    &:first-child
      border-top 2px solid camp-primary
    border-bottom 2px solid camp-primary

    .issue-header
      flexbox(flex)
      align-items(center)
      min-height 110px
      background-color inherit
      cursor pointer
      padding 25px
      transition background-color transition-rate

      .issue-icon
        margin-right 20px
        width 60px
        font-size 2em

      .issue-title
        margin 0
        font-size 2em
        padding-right 20px

      .issue-carat
        background-color white
        color camp-primary
        font-size 2.5em
        margin 0 0 0 auto
        line-height 0px
        transition background-color transition-rate
        &::before
          content "+"

    .issue-content
      display none
      padding 30px 20px

    .issue-quote
      font-size 1.5em
      font-style italic
      font-weight lighter
      padding-bottom 20px
      border-bottom camp-border
      .share
        flexbox(flex)
        align-items(center)
        margin-top 10px
        font-style normal
        font-weight bold
        font-size 0.6em
        text-transform uppercase
        color #aaaaaa
        letter-spacing 0.2px
        path
          fill #aaaaaa
        .social-share:hover path
          fill camp-primary

    .issue-read-time
      flexbox(flex)
      padding 15px 0
      border-bottom camp-border
      letter-spacing 0.3px
      text-transform uppercase
      font-size 0.8em
      .label
        font-weight bold
        margin-right 5px
        color #111111
      .time
        margin 0 10px
        font-weight lighter
        letter-spacing 0.7px


    .issue-abstract
      color #111111
      font-size: 1.8em
      font-weight bold
      padding 25px 0
      line-height 1.25em
      border-bottom camp-border
      .twitter-icon
      .facebook-icon
        display inline

    .issue-body
      padding 20px 0

    .issue-footnotes
      background-color #fdf5d1
      padding 40px
      border-radius 5px
      line-height 2.2em
      a
        color #111111
        text-decoration underline

    .issue-close
      cursor pointer
      margin-top 50px
      text-decoration underline
      text-transform uppercase

    &.active
      .issue-content
        display block

      .issue-header
        background-color camp-primary

      .issue-icon
        display none

      .issue-title
        color white

      .issue-carat
        background-color camp-primary
        color white
        font-size 2em
        &::before
          content  "â€”"

      .issue-body
        flexbox(flex)
        justify-content(flex-start)
        // margin-top 1.5em
        // padding 0 10%
        // max-width 1440px
        // margin-left auto
        // margin-right auto
        // width 100%
        // display none

        @media (min-width 960px)
          display block !important

        .issue-content
          font-size paragraph-font-size

        ol
          margin 0 0 0 1em
          font-size paragraph-font-size

        ul
          margin 0 0 0 1em
          font-size paragraph-font-size

        li
          padding-left 1em
          padding-bottom 0.5em

          a
            vertical-align baseline

        // The "UL" tag for the body tags
        .deal-content-list
          margin-top 20px

        // The "UL" tag for the subtext
        .deal-content-sublist
          font-size subtext-font-size
          margin-top 20px
          // margin-bottom 20px
          // test

        .default
          display block


    //   .contents-container

